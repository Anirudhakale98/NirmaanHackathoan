<link rel="stylesheet" href="/css/home.css">

<div class="home-container">
    <h1>Welcome to VoyaBook</h1>
    <p>Find and share amazing travel experiences!</p>
    <div class="search-bar">
        <form action="/listings/city" method="POST">
            <input type="text" name="location" placeholder="Search city" required>
            <button type="submit">Search</button>
        </form>
    </div>
    <div class="featured-listings">
        <% if (featuredListings.length > 0) { %>
            <% featuredListings.forEach(listing => { %>
                <div class="listing-card">
                    <a href="/listings/<%= listing._id %>">
                        <img src="<%= listing.image.list[0].url %>" alt="Listing Image">
                        <h3><%= listing.title %></h3>
                        <p>Location: <%= listing.location %></p>
                    </a>
                </div>
            <% }) %>
        <% } else { %>
            <p>No featured listings available.</p>
        <% } %>
    </div>
</div>